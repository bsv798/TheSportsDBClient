{
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": [ "feature", "enhancement" ]
    },
    {
      "title": "## ğŸ› Bug Fixes",
      "labels": [ "bug", "fix" ]
    },
    {
      "title": "## ğŸ“š Documentation",
      "labels": [ "documentation", "docs" ]
    },
    {
      "title": "## ğŸ§ª Tests",
      "labels": [ "test", "tests" ]
    },
    {
      "title": "## ğŸ”§ Maintenance",
      "labels": [ "chore", "maintenance" ]
    }
  ],
  "ignore_labels": [
    "ignore",
    "wontfix",
    "duplicate"
  ],
  "sort": "ASC",
  "template": "${{CHANGELOG}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|feature)[:\\(]",
      "target": "feature"
    },
    {
      "pattern": "^fix[:\\(]",
      "target": "bug"
    },
    {
      "pattern": "^docs[:\\(]",
      "target": "documentation"
    }
  ]
}
